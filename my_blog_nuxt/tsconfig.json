{
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@nuxt/vue-app"
    ],
    "paths": { "@/*": [ "./*" ], "~/*": [ "./*" ] },
    "target": "es5",
    "strict": true,
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "exclude": [
    "nuxt.config.js",
    "node_modules",
    "dist",
    "ecosystem.config.js",
    "env.*.js",
    "gulpfile.js",
    "jest.config.js"
  ]
}
